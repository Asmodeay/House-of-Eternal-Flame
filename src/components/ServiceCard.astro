---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <div class="text-4xl text-flame mb-4">{icon}</div>
  <h3 class="font-cinzel text-xl mb-2">{title}</h3>
  <p class="font-cormorant text-gray-600">{description}</p>
</div>