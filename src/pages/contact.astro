---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | The House of the Eternal Flame">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="max-w-2xl mx-auto">
      <h1 class="font-cinzel text-4xl text-center mb-8">Contact Us</h1>
      <div class="bg-white shadow-lg rounded-lg p-8">
        <form class="space-y-6">
          <div>
            <label for="name" class="block font-cinzel text-gray-700">Name</label>
            <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-flame focus:ring-flame" />
          </div>
          <div>
            <label for="email" class="block font-cinzel text-gray-700">Email</label>
            <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-flame focus:ring-flame" />
          </div>
          <div>
            <label for="service" class="block font-cinzel text-gray-700">Service Interested In</label>
            <select id="service" name="service" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-flame focus:ring-flame">
              <option>Weddings</option>
              <option>Baptisms</option>
              <option>Spiritual Counseling</option>
              <option>Funeral Services</option>
              <option>Meditation Classes</option>
              <option>Community Worship</option>
              <option>Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block font-cinzel text-gray-700">Message</label>
            <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-flame focus:ring-flame"></textarea>
          </div>
          <button type="submit" class="w-full bg-flame text-white font-cinzel py-2 px-4 rounded-md hover:bg-flame/90 transition-colors">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>