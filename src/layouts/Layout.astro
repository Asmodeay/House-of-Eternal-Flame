---
import '@fontsource/cinzel';
import '@fontsource/cormorant';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The House of the Eternal Flame - The Lucent Path" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50">
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <a href="/" class="flex items-center font-cinzel text-flame text-xl">
              House of the Eternal Flame
            </a>
          </div>
          <div class="flex space-x-8">
            <a href="/services" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-700 hover:text-flame">Services</a>
            <a href="/about" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-700 hover:text-flame">About</a>
            <a href="/contact" class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-700 hover:text-flame">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-gray-800 text-white mt-12">
      <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="font-cinzel text-lg">The House of the Eternal Flame</p>
          <p class="font-cormorant mt-2">Illuminating the path to spiritual enlightenment</p>
        </div>
      </div>
    </footer>
  </body>
</html>